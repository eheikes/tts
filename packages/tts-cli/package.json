{
  "name": "tts-cli",
  "version": "5.4.0",
  "description": "Command-line tool to convert text to speech",
  "bin": {
    "tts": "tts.js"
  },
  "files": [
    "lib/*",
    "LICENSE.txt",
    "tts.js",
    "yarn.lock"
  ],
  "scripts": {
    "lint": "standard --env jasmine --fix --verbose",
    "report-coverage": "codecov",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "cross-env JASMINE_CONFIG_PATH=test/e2e.json jasmine",
    "test:unit": "cross-env JASMINE_CONFIG_PATH=test/unit.json nyc jasmine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eheikes/tts.git"
  },
  "keywords": [
    "aws",
    "amazon",
    "polly",
    "text",
    "speech",
    "tts"
  ],
  "author": "Eric Heikes <eheikes@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/eheikes/tts/issues"
  },
  "homepage": "https://github.com/eheikes/tts/tree/master/packages/tts-cli#readme",
  "dependencies": {
    "commander": "^14.0.0",
    "debug": "^3.1.0",
    "listr2": "^8.0.2"
  },
  "devDependencies": {
    "codecov": "^3.6.5",
    "cross-env": "^5.2.0",
    "execa": "^9.6.0",
    "jasmine": "^3.5.0",
    "nyc": "^15.0.1",
    "proxyquire": "^2.1.3",
    "standard": "^17.1.0"
  },
  "standard": {
    "env": {
      "node": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "include": [
      "lib/**/*.js",
      "*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": false,
    "all": false,
    "report-dir": "./coverage"
  }
}
