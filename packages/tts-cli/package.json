{
  "name": "tts-cli",
  "version": "2.0.0",
  "description": "Command-line tool to convert text to speech",
  "bin": {
    "tts": "./tts.js"
  },
  "files": [
    "lib/*",
    "LICENSE.txt",
    "tts.js",
    "yarn.lock"
  ],
  "scripts": {
    "lint": "standard --fix --verbose",
    "report-coverage": "codecov",
    "test": "cross-env JASMINE_CONFIG_PATH=test/jasmine.json nyc jasmine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eheikes/tts.git"
  },
  "keywords": [
    "aws",
    "amazon",
    "polly",
    "text",
    "speech",
    "tts"
  ],
  "author": "Eric Heikes <eheikes@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/eheikes/tts/issues"
  },
  "homepage": "https://github.com/eheikes/tts/tree/master/packages/tts-cli#readme",
  "dependencies": {
    "@google-cloud/text-to-speech": "^3.1.0",
    "async": "^3.0.0",
    "aws-sdk": "^2.600.0",
    "debug": "^3.1.0",
    "fs-extra": "^2.0.0",
    "got": "^6.7.1",
    "listr": "^0.14.1",
    "minimist": "^1.2.0",
    "sax": "^1.2.4",
    "tempfile": "^1.1.1",
    "textchunk": "^1.1.0"
  },
  "devDependencies": {
    "codecov": "^3.6.5"
  },
  "standard": {
    "env": {
      "jasmine": true,
      "node": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "include": [
      "lib/**/*.js",
      "*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": false,
    "all": false,
    "report-dir": "./coverage"
  }
}
